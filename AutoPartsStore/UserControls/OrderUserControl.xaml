<UserControl x:Class="AutoPartsStore.UserControls.OrderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoPartsStore.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="AutoPartOrderImage" Margin="5" Height="150" Width="150"/>

        <StackPanel Orientation="Vertical" Grid.Column="1">
            <Label x:Name="OrderUserLabel" />
            <Label x:Name="OrderAutoPartNameLabel" />
            <Label x:Name="OrderStatusLabel" />
        </StackPanel>
    </Grid>
</UserControl>
