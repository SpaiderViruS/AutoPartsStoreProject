<UserControl x:Class="AutoPartsStore.UserControls.ManagersBusketAutopartsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoPartsStore.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image x:Name="AutopartImage" Width="125" Height="125" Margin="5"/>

        <StackPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Left">
            <Label x:Name="AutopartNameLabel" FontSize="16"/>
            <Label x:Name="DescriptionAutopartLabel"/>
            <Label x:Name="CharacteristikLabel"/>
            <Label x:Name="CostAutopartLabel"/>
        </StackPanel>
    </Grid>
</UserControl>
