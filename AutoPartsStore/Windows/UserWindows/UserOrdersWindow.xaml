<Window x:Class="AutoPartsStore.Windows.UserWindows.UserOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoPartsStore.Windows.UserWindows"
        mc:Ignorable="d"
        Title="UserOrdersWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label Content="Поиск" FontSize="18" />
            <TextBox x:Name="SearchTextBox" Grid.Column="1" TextChanged="SearchTextBox_TextChanged"/>
        </Grid>

        <ListView x:Name="OrdersListView" Grid.Row="1"/>

        <Grid Grid.Row="2">
            <Button x:Name="BackBtn" Content="Назад" Click="BackBtn_Click"/>
        </Grid>
    </Grid>
</Window>
